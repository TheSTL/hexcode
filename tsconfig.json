{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "emitDeclarationOnly": false,
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": ["packages"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.js"]
}
